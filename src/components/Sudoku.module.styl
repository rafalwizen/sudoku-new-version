.container
  display: flex
  flex-direction: column
  align-items: center
  padding: 20px

.gameInfo
  display: flex
  justify-content: space-between
  width: 100%
  max-width: 400px
  margin-bottom: 20px

.board
  display: grid
  grid-template-columns: repeat(9, 1fr)
  gap: 1px
  background-color: #000
  border: 2px solid #000
  width: 100%
  max-width: 400px

.cell
  background-color: #fff
  display: flex
  justify-content: center
  align-items: center
  font-size: 20px
  font-weight: bold
  aspect-ratio: 1
  cursor: pointer

  &.selected
    background-color: #e0e0ff

  &.highlighted
    background-color: #f0f0ff

  &.empty
    color: #666

  &.filled
    color: #000

  &.initial
    font-weight: bold
    color: #000

  &.userInput
    color: #325aaf

  &.rightBorder
    border-right: 2px solid #000

  &.bottomBorder
    border-bottom: 2px solid #000

.actions
  display: flex
  justify-content: space-between
  width: 100%
  max-width: 400px
  margin-top: 20px

.actionButton
  flex: 1
  margin: 0 5px

.numbers
  display: grid
  grid-template-columns: repeat(9, 1fr)
  gap: 5px
  width: 100%
  max-width: 400px
  margin-top: 20px

.numberButton
  aspect-ratio: 1

.newGameButton
  margin-top: 20px
  width: 100%
  max-width: 400px